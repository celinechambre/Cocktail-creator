<div class="container d-flex show mt-5">
  <div class="row mt-5 mb-5">
    <div>
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 550, width: 400, crop: :fill %>
      <% else %>
        <%= image_tag("https://res.cloudinary.com/dm3wt1pa5/image/upload/v1605099276/dmitry-dreyer-STymCDoVqJI-unsplash_dcmnex.jpg", alt:"image", height: 400, width: 300, crop: :fit) %>
      <% end %>    
    </div>
    <div class="description">
      <h2 class=""><%= @cocktail.name %></h2>
      <p class="">How to make me:
      <ul><% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %>
          -
          <%= dose.description %>
          -
          <%= link_to dose_path(dose.id), method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
        </li>    
      <%= render "doses/new", cocktail: @cocktail, dose: @dose, ingredient: @ingredient %>
      </ul>
      </p>
    </div>
    <%= link_to 'Back to cocktail list', cocktails_path, class: "btn btn-info mb-5" %> 
  </div>
</div>