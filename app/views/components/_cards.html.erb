<div class="cocktails row">
  <% @cocktails.each do |cocktail| %>
     <div class="cocktail-card">
     <%= link_to cocktail_path(cocktail) do %>
     <%= image_tag("https://images.unsplash.com/photo-1601924381523-019b78541b95?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2734&q=80", alt:"image", height: 400, width: 300, crop: :fit, class: "") %>
     <p class= "name"><%= cocktail.name %></p>
    <% end %>
    </div>
  <% end %>
</div>
